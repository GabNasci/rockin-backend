model Profile {
  id                    Int                   @id @default(autoincrement())
  name                  String
  handle                String                @unique
  about                 String?
  avatar                String?
  spotify_id            String?
  profile_type_id       Int
  user_id               Int?
  band                  Band?
  profile_type          ProfileType?          @relation(fields: [profile_type_id], references: [id])
  user                  User?                 @relation(fields: [user_id], references: [id])
  images                Image[]
  locations             Location?
  supports              Support[]
  posts                 Post[]
  tagged_profiles_posts TaggedProfilePost[]
  musician_bands        MusicianBand[]
  musician_genres       MusicianGenre[]
  musician_specialities MusicianSpeciality[]
  recomendations        Recomendation[]
  conversation_profiles ConversationProfile[]
  created_at            DateTime              @default(now())
  updated_at            DateTime?             @updatedAt

  @@map("profiles")
}
